$TTL <%= @ttl %>

@ IN SOA <%= @primary_master %> <%= @dotted_email %>. (
          <%= @serial %> ; serial number
          <%= @refresh %> ; refresh
          <%= @retry %> ; retry
          <%= @expire %> ; expire
          <%= @min_ttl %> ; min ttl
        )

<% [@masters].flatten.each do |master| -%>
@ IN NS <%= @master %>.
<% end -%>

<% scope.compiler.catalog.vertices.each do |resource| -%>
<% if resource.type == "Bind::Record" and resource[:zone] == @zonename and resource[:view] == @view -%>
<%= [resource[:lines]].flatten.join("\n") %>
<% end %>
<% end -%>
